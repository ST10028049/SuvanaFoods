@model IEnumerable<AgriEnergyConnect.Models.Product>
<!-- A View for employees to search and filter for farmers and their products-->
<!-- This was adapted from W3schools-->
<!-- Link: https://www.w3schools.com/bootstrap/bootstrap_tables.asp-->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search for Farmer - AgriEnergyConnect</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body, html {
            height: 100%;
            margin: 0;
            font-family: Arial, sans-serif;
            color: black;
            display: flex;
            flex-direction: column;
        }

        h1, h2, h3 {
            text-align: center;
            margin-top: 50px;
            margin-bottom: 20px;
        }

        .container {
            width: 80%;
            margin: 0 auto;
        }

        .form-container {
            margin-bottom: 30px;
        }

            .form-container input[type="text"],
            .form-container select,
            .form-container input[type="date"] {
                width: calc(100% - 120px);
                margin-right: 10px;
                margin-bottom: 10px;
                padding: 10px;
                border-radius: 5px;
                border: 1px solid #ccc;
                font-size: 16px;
            }

            .form-container button {
                padding: 10px 20px;
                border: none;
                border-radius: 5px;
                background-color: #3DAD42;
                color: white;
                font-size: 16px;
                cursor: pointer;
            }

        .table {
            width: 80%;
            margin: 0 auto;
            background-color: #f9f9f9;
            border-radius: 5px;
            overflow: hidden;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        }

            .table th, .table td {
                text-align: center;
                vertical-align: middle;
            }

            .table thead {
                background-color: #0F6E19;
                color: #fff;
            }

        th, td {
            padding: 10px;
            border: 1px solid #ddd;
            text-align: center;
        }

        th {
            background-color: #0F6E19;
            color: white;
        }

        .alert {
            width: 50%;
            margin: 0 auto;
            text-align: center;
            margin-top: 20px;
        }

        .form-inline label {
            margin-right: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Search for Farmer</h1>
        <h6 class="text-center mb-4">Search for a farmer by their name and view their products</h6>
        <div class="form-container">
            <form method="post" asp-action="SearchFarmer">
                <input type="text" name="farmerName" placeholder="Enter farmer name" />
                <button type="submit">Search</button>
            </form>
        </div>

        @if (Model != null && Model.Any())
        {
            <h3>Their Products</h3>

            <table class="table table-striped table-bordered mt-4">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Product Name</th>
                        <th scope="col">Category</th>
                        <th scope="col">Production Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>@product.ProName</td>
                            <td>@product.ProCategory</td>
                            <td>@product.ProProductionDate.ToString("yyyy-MM-dd")</td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="form-container">
                <h3>Filter Products</h3>

                <form class="form-inline" method="post" asp-action="FilterProducts">
                    <input type="hidden" name="farmerId" value="@Model.FirstOrDefault()?.FarId" />
                    <label>Select category:</label>
                    <select name="category" class="form-control">
                        <option value="">Select category</option>
                        <option value="Crops">Crops</option>
                        <option value="Fertilizers">Fertilizers</option>
                        <option value="Irrigation">Irrigation</option>
                        <option value="Livestock">Livestock</option>
                        <option value="Machinery & Tools">Machinery & Tools</option>
                        <option value="Organic Farming">Organic Farming</option>
                        <option value="Other">Other</option>
                        <option value="Pesticides">Pesticides</option>
                        <option value="Seeds">Seeds</option>
                        <option value="Training & Resources">Training & Resources</option>
                    </select>
                    <p></p>
                    <label>Select a start date:</label>
                    <input type="date" name="startDate" class="form-control" />
                    <p></p>
                    <label>Select an end date:</label>
                    <input type="date" name="endDate" class="form-control" />
                    <button type="submit" class="btn btn-primary w-50">Filter</button>
                </form>
            </div>
        }
        @if (!string.IsNullOrEmpty(TempData["Message"]?.ToString()))
        {
            <div class="alert alert-info">
                @TempData["Message"]
            </div>
        }
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
