@model IEnumerable<SuvanaFoods.Models.FoodItem>

@{
    ViewBag.Title = "Suvana Foods - Manage Stock";
}

<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">

<div class="employee-dashboard">
    <div class="sidebar" id="sidebar">
        <ul class="nav flex-column">
            <li class="nav-item">
                <a href="@Url.Action("Index", "Home")">
                    <i class="fas fa-tachometer-alt"></i>
                    <span>Dashboard</span>
                </a>
            </li>
            <li class="nav-item">
                <a href="@Url.Action("CategoryManagement", "Admin")">
                    <i class="fas fa-list"></i>
                    <span>Categories</span>
                </a>
            </li>
            <li class="nav-item">
                <a href="@Url.Action("AddFoodItem", "Admin")">
                    <i class="fas fa-box"></i>
                    <span>Food Items</span>
                </a>
            </li>
            <li class="nav-item">
                <a href="#">
                    <i class="fas fa-shipping-fast"></i>
                    <span>Update Status</span>
                </a>
            </li>
            <li class="nav-item">
                <a href="#">
                    <i class="fas fa-users"></i>
                    <span>Users</span>
                </a>
            </li>
            <li class="nav-item">
                <a href="#">
                    <i class="fas fa-envelope"></i>
                    <span>Contact</span>
                </a>
            </li>
            <li class="nav-item">
                <a href="#">
                    <i class="fas fa-chart-bar"></i>
                    <span>Reports</span>
                </a>
            </li>
        </ul>
    </div>

    <div class="toggle-btn" id="toggle-btn">
        <i class="fas fa-bars"></i>
    </div>

    <div class="content">
        <div class="container">
            <h1>Stock Management</h1>
            <p>View and manage the stock levels of products at Suvana Foods.</p>

            <div class="text-right mb-3">
                <a href="@Url.Action("AddFoodItem", "Admin")" class="btn btn-primary">Add New Product</a>
            </div>

            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Product ID</th>
                        <th>Product Name</th>
                        <th>Category</th>
                        <th>Stock Quantity</th>
                        <th>Price</th>
                        <th>Status</th>
                        <th>Active</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.FoodItemId</td>
                            <td>@item.Name</td>
                            <td>@item.Category</td>
                            <td>@item.Quantity</td>
                            <td>@item.Price?.ToString("C")</td>
                            <td>@(item.Quantity > 0 ? "In Stock" : "Out of Stock")</td>
                            <td>@(item.IsActive ?? false ? "Active" : "Inactive")</td>
                            <td>
                                <a href="@Url.Action("UpdateStock", "Admin", new { id = item.FoodItemId })" class="btn btn-warning">Update Stock</a>
                                <a href="@Url.Action("DeleteProduct", "Admin", new { id = item.FoodItemId })" class="btn btn-danger">Remove</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    const sidebar = document.getElementById('sidebar');
    const toggleBtn = document.getElementById('toggle-btn');
    toggleBtn.addEventListener('click', function () {
        sidebar.classList.toggle('collapsed');
    });
</script>

<style>
    body {
        font-family: 'Poppins', sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f0f0f0;
    }

    .employee-dashboard {
        display: flex;
        height: 100vh;
        overflow: hidden;
    }

    .sidebar {
        height: calc(100% - 50px); /* Adjust height to account for the top navbar */
        background-color: #343a40;
        min-width: 250px;
        max-width: 250px;
        transition: all 0.3s ease;
        position: fixed; /* Sidebar docked to the left */
        left: 0;
        top: 75px; /* Push the sidebar down by 50px to avoid navbar collision */
        bottom: 0;
        overflow-y: auto; /* Allow vertical scrolling if needed */
    }

        .sidebar.collapsed {
            width: 60px;
        }

        .sidebar ul {
            list-style-type: none;
            padding: 0;
        }

        .sidebar li {
            padding: 15px;
        }

            .sidebar li a {
                color: white;
                text-decoration: none;
                display: flex;
                align-items: center;
                font-size: 18px;
            }

                .sidebar li a i {
                    margin-right: 10px;
                }

                .sidebar li a span {
                    display: inline-block;
                    transition: opacity 0.3s ease;
                }

        .sidebar.collapsed li a span {
            opacity: 0;
        }

    .toggle-btn {
        position: fixed;
        top: 15px;
        left: 250px;
        font-size: 24px;
        cursor: pointer;
        z-index: 1000;
        transition: left 0.3s ease;
    }

    .sidebar.collapsed ~ .toggle-btn {
        left: 60px;
    }

    .content {
        margin-left: 250px;
        padding: 20px;
        transition: margin-left 0.3s ease;
        width: 100%;
        margin-top: 30px; /* This moves the content down by 80px */
    }

    .sidebar.collapsed ~ .content {
        margin-left: 60px;
    }

    h1 {
        color: #4CAF50;
        text-align: center;
    }

    .table th {
        background-color: #007bff;
        color: white;
    }

    .btn {
        margin-right: 5px;
    }

    .container {
        max-width: 100%;
        margin: 0 auto;
        padding: 0 15px;
    }
</style>
