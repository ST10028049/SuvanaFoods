@{
    ViewBag.Title = "Suvana Foods - Manage Stock";
}

<div class="container">
    <h1>Stock Management</h1>
    <p>View and manage the stock levels of products at Suvana Foods.</p>

    <div class="text-right mb-3">
        <a href="@Url.Action("AddNewProduct", "Admin")" class="btn btn-primary">Add New Product</a>
    </div>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Product ID</th>
                <th>Product Name</th>
                <th>Category</th>
                <th>Stock Quantity</th>
                <th>Price</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <!-- Sample stock data (replace with dynamic content in production) -->
            <tr>
                <td>001</td>
                <td>Banana Bread</td>
                <td>Baked Goods</td>
                <td>50</td>
                <td>$5.00</td>
                <td>In Stock</td>
                <td>
                    <a href="@Url.Action("UpdateStock", "Admin", new { id = 001 })" class="btn btn-warning">Update Stock</a>
                    <a href="@Url.Action("DeleteProduct", "Admin", new { id = 001 })" class="btn btn-danger">Remove</a>
                </td>
            </tr>
            <tr>
                <td>002</td>
                <td>Vegetable Soup</td>
                <td>Prepared Meals</td>
                <td>10</td>
                <td>$3.50</td>
                <td>In Stock</td>
                <td>
                    <a href="@Url.Action("UpdateStock", "Admin", new { id = 002 })" class="btn btn-warning">Update Stock</a>
                    <a href="@Url.Action("DeleteProduct", "Admin", new { id = 002 })" class="btn btn-danger">Remove</a>
                </td>
            </tr>
            <tr>
                <td>003</td>
                <td>Apple Pie</td>
                <td>Baked Goods</td>
                <td>0</td>
                <td>$7.00</td>
                <td>Out of Stock</td>
                <td>
                    <a href="@Url.Action("UpdateStock", "Admin", new { id = 003 })" class="btn btn-warning">Update Stock</a>
                    <a href="@Url.Action("DeleteProduct", "Admin", new { id = 003 })" class="btn btn-danger">Remove</a>
                </td>
            </tr>
            <!-- Repeat for more products -->
        </tbody>
    </table>
</div>

<style>
    .container {
        margin-top: 50px;
    }

    h1 {
        color: #4CAF50;
        text-align: center;
        margin-bottom: 20px;
    }

    .table {
        width: 100%;
        margin-top: 20px;
    }

        .table th {
            background-color: #007bff;
            color: white;
            text-align: center;
        }

        .table td {
            text-align: center;
            vertical-align: middle;
        }

    .btn {
        padding: 10px 20px;
        margin-right: 5px;
        font-size: 14px;
    }

    .btn-warning {
        background-color: #ffc107;
        color: white;
    }

    .btn-danger {
        background-color: #dc3545;
        color: white;
    }

    .btn-primary {
        background-color: #007bff;
        color: white;
    }

    .btn:hover {
        opacity: 0.85;
    }

    .mb-3 {
        margin-bottom: 20px;
    }

    .text-right {
        text-align: right;
    }
</style>

