@{
    ViewBag.Title = "Suvana Foods - Admin Dashboard";
}

<div class="container">
    <h1>Welcome to Suvana Foods Admin Dashboard</h1>
    <p>Manage products, orders, and view business reports.</p>

    <div class="dashboard-options">
        <a href="@Url.Action("ManageProducts", "Admin")" class="btn btn-primary">Manage Products</a>
        <a href="@Url.Action("ManageOrders", "Admin")" class="btn btn-secondary">Manage Orders</a>
        <a href="@Url.Action("ViewReports", "Admin")" class="btn btn-info">View Reports</a>
    </div>
</div>

<style>
    .container {
        text-align: center;
        margin-top: 50px;
    }
    h1 {
        color: #4CAF50;
    }
    .dashboard-options {
        margin-top: 20px;
    }
    .btn {
        margin: 10px;
        padding: 15px 30px;
        font-size: 16px;
        border-radius: 5px;
        text-decoration: none;
    }
    .btn-primary {
        background-color: #28a745;
        color: white;
    }
    .btn-secondary {
        background-color: #17a2b8;
        color: white;
    }
    .btn-info {
        background-color: #ffc107;
        color: white;
    }
    .btn:hover {
        opacity: 0.85;
    }
</style>

