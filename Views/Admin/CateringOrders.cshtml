@section Scripts {
    <script>
        function toggleDetails(bookingId) {
            const detailsRow = document.getElementById(`details-${bookingId}`);
            if (detailsRow.style.display === "none") {
                detailsRow.style.display = "table-row";
            } else {
                detailsRow.style.display = "none";
            }
        }
