@model IEnumerable<SuvanaFoods.Models.Customer>

@{
    ViewBag.Title = "Suvana Foods - Manage Customers";
}

<div class="container">
    <h1>Manage Customers</h1>
    <p>View and manage customer accounts registered on Suvana Foods.</p>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Username</th>
                <th>Mobile</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@customer.Name</td>
                    <td>@customer.Email</td>
                    <td>@customer.Username</td>
                    <td>@customer.Mobile</td>
                    <td>
                        <a href="@Url.Action("EditCustomer", new { id = customer.CustomerId })" class="btn btn-warning">Edit</a>
                        <a href="@Url.Action("DeleteCustomer", new { id = customer.CustomerId })" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .container {
        margin-top: 50px;
    }

    h1 {
        color: #4CAF50;
        text-align: center;
        margin-bottom: 20px;
    }

    .table {
        width: 100%;
        margin-top: 20px;
    }

        .table th {
            background-color: #007bff;
            color: white;
            text-align: center;
        }

        .table td {
            text-align: center;
            vertical-align: middle;
        }

    .btn {
        padding: 10px 20px;
        margin-right: 5px;
        font-size: 14px;
    }

    .btn-info {
        background-color: #17a2b8;
        color: white;
    }

    .btn-warning {
        background-color: #ffc107;
        color: white;
    }

    .btn-danger {
        background-color: #dc3545;
        color: white;
    }

    .btn-success {
        background-color: #28a745;
        color: white;
    }

    .btn:hover {
        opacity: 0.85;
    }
</style>
