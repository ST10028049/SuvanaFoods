@model SuvanaFoods.Models.OrdersViewModel

@{
    ViewBag.Title = "Suvana Foods - View Orders";
}

<div class="container" style="margin-top: 70px;">
    <h1>Orders Dashboard</h1>
    <p>Here you can view and manage customer orders.</p>

    <!-- Tabs for Current and Past Orders -->
    <ul class="nav nav-tabs" id="ordersTab" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="current-orders-tab" data-toggle="tab" href="#current-orders" role="tab">Current Orders</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="past-orders-tab" data-toggle="tab" href="#past-orders" role="tab">Past Orders</a>
        </li>
    </ul>

    <div class="tab-content">
        <!-- Current Orders Tab -->
        <div class="tab-pane fade show active" id="current-orders" role="tabpanel">
            <table class="table table-striped table-bordered mt-3">
                <thead>
                    <tr>
                        <th>Order Name</th>
                        <th>Date</th>
                        <th>Total Price</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model.CurrentOrders)
                    {
                        <tr>
                            <td>@order.OrderNo</td>
                            <td>
                                @(order.OrderDate.HasValue ? order.OrderDate.Value.ToShortDateString() : "N/A")<br />
                                <small>@(order.OrderDate.HasValue ? order.OrderDate.Value.ToShortTimeString() : "N/A")</small>
                            </td>

                            <td>R@order.Total</td>
                            <td>@order.Status</td>
                            <td>
                                <a href="@Url.Action("ViewOrderDetails", "Admin", new { id = order.OrderId })" class="btn btn-info">View</a>
                                <form asp-action="UpdateOrderStatus" asp-controller="Admin" method="post" style="display:inline-block;">
                                    <input type="hidden" name="id" value="@order.OrderId" />
                                    <input type="hidden" name="status" value="Completed" />
                                    <input type="hidden" name="paymentStatus" value="Paid" />
                                    <button type="submit" class="btn btn-success">Mark as Completed</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Past Orders Tab -->
        <div class="tab-pane fade" id="past-orders" role="tabpanel">
            <table class="table table-striped table-bordered mt-3">
                <thead>
                    <tr>
                        <th>Order Name</th>
                        <th>Date</th>
                        <th>Total Price</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model.PastOrders)
                    {
                        <tr>
                            <td>@order.OrderNo</td>
                            <td>
                                @(order.OrderDate.HasValue ? order.OrderDate.Value.ToShortDateString() : "N/A")<br />
                                <small>@(order.OrderDate.HasValue ? order.OrderDate.Value.ToShortTimeString() : "N/A")</small>
                            </td>

                            <td>R@order.Total</td>
                            <td>@order.Status</td>
                            <td>
                                <a href="@Url.Action("ViewOrderDetails", "Admin", new { id = order.OrderId })" class="btn btn-info">View</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .container {
        margin-top: 70px;
    }

    h1 {
        text-align: center;
        margin-bottom: 20px;
        color: #4CAF50;
    }

    .table th {
        background-color: #28a745;
        color: white;
        text-align: center;
    }

    .table td {
        text-align: center;
        vertical-align: middle;
    }

    .btn-info, .btn-success {
        margin-right: 5px;
    }
</style>



