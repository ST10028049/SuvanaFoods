@{
    ViewBag.Title = "Suvana Foods - View Orders";
}

<div class="container">
    <h1>Orders Dashboard</h1>
    <p>Here you can view and manage customer orders.</p>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Customer Name</th>
                <th>Date</th>
                <th>Total Price</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <!-- (replace when updated) -->
            <tr>
                <td>001</td>
                <td>John Doe</td>
                <td>2024-10-20</td>
                <td>$50.00</td>
                <td>Pending</td>
                <td>
                    <a href="@Url.Action("ViewOrderDetails", "Admin", new { id = 001 })" class="btn btn-info">View</a>
                    <a href="#" class="btn btn-warning">Update Status</a>
                </td>
            </tr>
            <tr>
                <td>002</td>
                <td>Jane Smith</td>
                <td>2024-10-19</td>
                <td>$75.00</td>
                <td>Shipped</td>
                <td>
                    <a href="@Url.Action("ViewOrderDetails", "Admin", new { id = 002 })" class="btn btn-info">View</a>
                    <a href="#" class="btn btn-warning">Update Status</a>
                </td>
            </tr>
            <!-- Repeat for more orders -->
        </tbody>
    </table>
</div>

<style>
    .container {
        margin-top: 50px;
    }

    h1 {
        color: #4CAF50;
        text-align: center;
        margin-bottom: 20px;
    }

    .table {
        width: 100%;
        margin-top: 20px;
    }

        .table th {
            background-color: #28a745;
            color: white;
            text-align: center;
        }

        .table td {
            text-align: center;
            vertical-align: middle;
        }

    .btn {
        padding: 10px 20px;
        margin-right: 5px;
        font-size: 14px;
    }

    .btn-info {
        background-color: #17a2b8;
        color: white;
    }

    .btn-warning {
        background-color: #ffc107;
        color: white;
    }

    .btn:hover {
        opacity: 0.85;
    }
</style>

