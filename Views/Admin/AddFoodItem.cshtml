@model SuvanaFoods.Models.FoodItem
@{
    ViewBag.Title = "Add Food Item";
}

<h2>Add Food Item</h2>

<form asp-action="AddFoodItem" enctype="multipart/form-data" method="post">
    <div class="form-group">
        <label for="CategoryId">Category</label>
        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories">
            <option value="">--Select Category--</option>
        </select>
    </div>

    <div class="form-group">
        <label for="Name">Food Item Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Description">Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Price">Price</label>
        <input asp-for="Price" class="form-control" type="number" step="0.01" min="0" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label for="Quantity">Quantity</label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="ImageUrl">Upload Image</label>
        <input asp-for="ImageUrl" type="file" class="form-control" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>

    <div class="form-group form-check">
        <input asp-for="IsActive" class="form-check-input" type="checkbox" />
        <label asp-for="IsActive" class="form-check-label">Is Active</label>
    </div>


    <button type="submit" class="btn btn-primary">Add Food Item</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
