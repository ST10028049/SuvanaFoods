@model IEnumerable<AgriEnergyConnect.Models.Product>
<!-- A View for farmers to view their products-->
<!-- This was adapted from W3schools-->
<!-- Link: https://www.w3schools.com/bootstrap/bootstrap_tables.asp-->
@{
    ViewData["Title"] = "My Products";
}
<body>
<h1>My Products</h1>

@if (TempData["ViewStatus"] != null)
{
    <div class="alert alert-danger mt-3">
        @TempData["ViewStatus"]
    </div>
}
else
{
    <table class="table table-striped table-bordered mt-4">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Product Name</th>
                <th scope="col">Category</th>
                <th scope="col">Production Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.ProName</td>
                    <td>@product.ProCategory</td>
                    <td>@product.ProProductionDate.ToString("yyyy-MM-dd")</td>
                </tr>
            }
        </tbody>
    </table>
}
</body>

<style>
        body, html {
            height: 100%;
            margin: 0;
            font-family: Arial, sans-serif;
            color: black;
            display: flex;
            flex-direction: column;
        }

   

    h1 {
        color: black;
        text-align: center;
        margin-top: 50px;
        margin-bottom: 20px;
    }

    .table {
        width: 80%;
        margin: 0 auto;
        background-color: #f9f9f9;
        border-radius: 5px;
        overflow: hidden;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }

    .table th, .table td {
        text-align: center;
        vertical-align: middle;
    }

    .table thead {
            background-color: #0F6E19;
        color: #fff;
    }

    .alert {
        width: 50%;
        margin: 0 auto;
        text-align: center;
    }
</style>
