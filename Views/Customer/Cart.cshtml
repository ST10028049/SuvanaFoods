@{
    ViewBag.Title = "Suvana Foods - Your Cart";
}

<div class="container">
    <h1>Your Cart</h1>
    <p>Review your selected items before proceeding to checkout.</p>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Menu Item</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <!-- Sample cart data (replace with dynamic content) -->
            <tr>
                <td>Chicken Burger</td>
                <td>$5.00</td>
                <td>
                    <input type="number" value="1" class="form-control" style="width: 60px;" min="1" />
                </td>
                <td>$5.00</td>
                <td>
                    <a href="#" class="btn btn-danger">Remove</a>
                    <a href="#" class="btn btn-primary">Update</a>
                </td>
            </tr>
            <tr>
                <td>Pizza</td>
                <td>$8.00</td>
                <td>
                    <input type="number" value="2" class="form-control" style="width: 60px;" min="1" />
                </td>
                <td>$16.00</td>
                <td>
                    <a href="#" class="btn btn-danger">Remove</a>
                    <a href="#" class="btn btn-primary">Update</a>
                </td>
            </tr>
            <!-- Repeat for other items in the cart -->
        </tbody>
    </table>

    <div class="cart-summary">
        <h3>Cart Summary</h3>
        <p><strong>Total Items:</strong> 3</p>
        <p><strong>Total Amount:</strong> $21.00</p>
        <a href="@Url.Action("Checkout", "Customer")" class="btn btn-success">Proceed to Checkout</a>
    </div>
</div>

