@model SuvanaFoods.Models.BookingEvent

@{
    ViewBag.Title = "Create Event Booking";
}

<h2>Create Event Booking</h2>

@using (Html.BeginForm("BookingEvent", "Customer", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.EventName)
        @Html.TextBoxFor(model => model.EventName, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.EventName)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.EventDate)
        @Html.TextBoxFor(model => model.EventDate, "{0:yyyy-MM-dd}", new { type = "date", @class = "form-control" })
        @Html.ValidationMessageFor(model => model.EventDate)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.EventLocation)
        @Html.TextBoxFor(model => model.EventLocation, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.EventLocation)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.GuestNumber)
        @Html.TextBoxFor(model => model.GuestNumber, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.GuestNumber)
    </div>

    <h2>Select Menu for Event</h2>

     var bookingId = Model.BookingId;

    <a href="@Url.Action("Menu", "Customer", new { bookingId = bookingId })" class="btn btn-success">
        Place Order
    </a>

    <button type="submit" class="btn btn-primary">Create Event</button>
}
