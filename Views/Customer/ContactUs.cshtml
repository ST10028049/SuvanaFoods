@model SuvanaFoods.Models.Contact

@{
    ViewBag.Title = "Contact Us";
}

<h2>Contact Us</h2>

<div class="contact-form">
    @using (Html.BeginForm("SubmitContact", "Customer", FormMethod.Post))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.Name)
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Your Name" })
            @Html.ValidationMessageFor(m => m.Name)
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Email)
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Your Email" })
            @Html.ValidationMessageFor(m => m.Email)
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Subject)
            @Html.TextBoxFor(m => m.Subject, new { @class = "form-control", placeholder = "Subject" })
            @Html.ValidationMessageFor(m => m.Subject)
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Message)
            @Html.TextAreaFor(m => m.Message, new { @class = "form-control", placeholder = "Your Message", rows = 5 })
            @Html.ValidationMessageFor(m => m.Message)
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    }
</div>

<!-- Add space between sections -->
<br />
<br />
<br />

<!-- Navigation button to User Feedback -->
<div class="user-feedback" style="margin-top: 20px;">
    <h3>View all Admin Feedback?</h3>
    <a href="@Url.Action("Feedback", "Customer")" class="btn btn-info">View Feedback</a>
</div>