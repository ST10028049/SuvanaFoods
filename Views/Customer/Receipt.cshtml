@model SuvanaFoods.Models.ReceiptViewModel

<h2>Order Receipt</h2>
<p>Order Number: @Model.OrderId</p>
<p>Date: @Model.OrderDate.ToString("dd MMM yyyy")</p>
<p>Customer Name: @Model.CustomerName</p>

<h3>Order Items</h3>
<table class="table">
    <thead>
        <tr>
            <th>Item</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderItems)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Quantity</td>
                <td>R @item.Price:F2</td>
                <td>R @(item.Price * item.Quantity):F2</td>
            </tr>
        }
    </tbody>
</table>

<h3>Total Amount: R @Model.TotalAmount:F2</h3>
